<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/iV_detail_pic"
            android:layout_width="120dp"
            android:layout_height="160dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/filter_thumb_sweets" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rB_detail_rating"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:numStars="5"
            app:layout_constraintStart_toStartOf="@+id/tV_detail_name"
            app:layout_constraintTop_toBottomOf="@+id/tV_detail_name" />

        <TextView
            android:id="@+id/tV_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/iV_detail_pic"
            app:layout_constraintTop_toTopOf="@+id/iV_detail_pic" />

        <TextView
            android:id="@+id/tV_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/rB_detail_rating"
            app:layout_constraintStart_toEndOf="@+id/rB_detail_rating"
            app:layout_constraintTop_toTopOf="@+id/rB_detail_rating" />

        <TextView
            android:id="@+id/zhuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="主演 :"
            app:layout_constraintStart_toStartOf="@+id/daoyan"
            app:layout_constraintTop_toBottomOf="@+id/tV_detail_director" />

        <TextView
            android:id="@+id/daoyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="导演 :"
            app:layout_constraintStart_toStartOf="@+id/rB_detail_rating"
            app:layout_constraintTop_toBottomOf="@+id/rB_detail_rating" />

        <TextView
            android:id="@+id/tV_detail_director"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/daoyan"
            app:layout_constraintTop_toTopOf="@+id/daoyan" />

        <TextView
            android:id="@+id/tV_detail_actor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/zhuyan"
            app:layout_constraintTop_toTopOf="@+id/zhuyan" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="上映 :"
            app:layout_constraintStart_toStartOf="@+id/zhuyan"
            app:layout_constraintTop_toBottomOf="@+id/tV_detail_actor" />

        <TextView
            android:id="@+id/tV_detail_year"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>